<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.weatherpit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/weather_clock_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CurrentHistoricWeatherActivity"
            android:parentActivityName=".ui.MainActivity">
            <metadata
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity">
            </metadata>
        </activity>
        <activity
            android:name=".ui.SevenDayForecastActivity"
            android:parentActivityName=".ui.CurrentHistoricWeatherActivity">
            <metadata
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.CurrentHistoricWeatherActivity">
            </metadata>
        </activity>
        <activity
            android:name=".ui.AboutAppActivity"
            android:parentActivityName=".ui.MainActivity">
            <metadata
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity">
            </metadata>
        </activity>
        <activity
            android:name=".ui.DailyForecastDetailActivity"
            android:parentActivityName=".ui.SevenDayForecastActivity">
            <metadata
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.SevenDayForecastActivity">
            </metadata>
        </activity>
    </application>

</manifest>